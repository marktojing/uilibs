<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
   >
<com.csnt.ui.view.single.statusBar.StatusBarHeightView
    android:id="@+id/status_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
</com.csnt.ui.view.single.statusBar.StatusBarHeightView>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:id="@+id/header_root_layout"
        android:layout_height="0dp"
       >

        <ImageView
            android:id="@+id/header_left_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/ic_back"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/header_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:lines="1"
            android:maxLines="11"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="title"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/header_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:lines="1"
            android:maxLines="11"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="title"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/header_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:lines="1"
            android:maxLines="11"
            android:ellipsize="end"
            android:text="title"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/header_center_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ic_add"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="12dp"
            />
        <ImageView
            android:id="@+id/header_right_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ic_add"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="12dp"
            />

    </RelativeLayout>
</LinearLayout>